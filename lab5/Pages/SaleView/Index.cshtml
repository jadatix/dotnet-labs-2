@page
@model lab5.Pages.SaleView.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].DateOfSale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sale) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfSale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.ContactPhone)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SaleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SaleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SaleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
