@page
@model lab5.Pages.ManagerView.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Manager) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.ContactPhone)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ManagerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ManagerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ManagerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
